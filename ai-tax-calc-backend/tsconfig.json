{
    "compilerOptions": {
        "target": "ESNext", // Target modern JavaScript
        "module": "CommonJS", // Use CommonJS module system
        "strict": true, // Enable strict type checking
        "esModuleInterop": true, // Allow default imports from CommonJS
        "skipLibCheck": true, // Skip type checking for library files
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist", // Output directory for compiled files
        "rootDir": "./src" // Root directory for source files
    },
    "include": [
        "src"
    ], // Include only the source directory
    "exclude": [
        "node_modules",
        "dist" // Exclude the output directory
    ] // Exclude dependencies
}